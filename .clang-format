# 2020 Daniel Stotts

---
BasedOnStyle: LLVM
ColumnLimit: 120
IndentWidth: 4  # Width is 4 to consume less of the ColumnLimit
TabWidth: 4  # Should be the same value as IndentWidth
AccessModifierOffset: -4  # Do not indent access specifiers, e.g. `public`
UseTab: ForIndentation  # Tabs are used to facilitate personal tab width preferences
Language: Cpp
Standard: Latest

# Brace wrapping
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterEnum: true
  AfterExternBlock: false
  AfterFunction: true
  AfterNamespace: false
  AfterStruct: true
  AfterUnion: true
  BeforeElse: true
  SplitEmptyFunction: false
  SplitEmptyNamespace: false
  SplitEmptyRecord: false

# Align all the things!
AlignAfterOpenBracket: Align
AlignConsecutiveMacros: true
AlignEscapedNewlines: Left
AlignOperands: AlignAfterOperator

# Penalties
PenaltyBreakAssignment: 500

# Other
AllowAllArgumentsOnNextLine: false
AllowAllConstructorInitializersOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortFunctionsOnASingleLine: None
AlwaysBreakAfterReturnType: None
AlwaysBreakBeforeMultilineStrings: false
AlwaysBreakTemplateDeclarations: Yes
BinPackArguments: false
BinPackParameters: false
BreakBeforeBinaryOperators: NonAssignment
BreakConstructorInitializers: BeforeComma
ConstructorInitializerAllOnOneLineOrOnePerLine: false
IncludeBlocks: Preserve
IndentPPDirectives: None
MaxEmptyLinesToKeep: 2
PointerAlignment: Middle
ReflowComments: true
SortIncludes: true
SortUsingDeclarations: true
SpaceAfterCStyleCast: true
SpaceBeforeCpp11BracedList: true
SpacesBeforeTrailingComments: 2
...
